<div class="px-4 py-6 sm:px-0">
  <div class="lg:flex lg:items-center lg:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @cv_entry.title %>
      </h2>
      <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
        <div class="mt-2 flex items-center text-sm text-gray-500">
          Position: <%= @cv_entry.position %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500">
          Created: <%= @cv_entry.created_at.strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
    <div class="mt-5 flex lg:mt-0 lg:ml-4">
      <%= link_to "Edit", edit_admin_cv_entry_path(@cv_entry), class: "sm:ml-3 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to "Delete", admin_cv_entry_path(@cv_entry), method: :delete, 
          confirm: "Are you sure you want to delete this CV entry?",
          class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">CV Entry Content</h3>
      </div>
      <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
        <div class="prose max-w-none">
          <%= @cv_entry.content %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to "← Back to CV Entries", admin_cv_entries_path, class: "text-indigo-600 hover:text-indigo-500" %>
    <%= link_to "View CV Page →", cv_path, target: "_blank", class: "text-indigo-600 hover:text-indigo-500" %>
  </div>
</div>
