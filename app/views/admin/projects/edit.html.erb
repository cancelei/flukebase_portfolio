<div class="px-4 py-6 sm:px-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Edit Project</h3>
        <p class="mt-1 text-sm text-gray-600">
          Update your project details below.
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with model: [:admin, @project], local: true, multipart: true, class: "space-y-6" do |form| %>
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            
            <!-- Title -->
            <div>
              <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <% if @project.errors[:title].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @project.errors[:title].first %></p>
              <% end %>
            </div>

            <!-- Slug -->
            <div>
              <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :slug, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <% if @project.errors[:slug].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @project.errors[:slug].first %></p>
              <% end %>
            </div>

            <!-- Description -->
            <div>
              <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= form.rich_text_area :description, class: "trix-content" %>
              </div>
              <% if @project.errors[:description].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @project.errors[:description].first %></p>
              <% end %>
            </div>

            <!-- URLs -->
            <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">
              <div>
                <%= form.label :github_url, "GitHub URL", class: "block text-sm font-medium text-gray-700" %>
                <%= form.url_field :github_url, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              <div>
                <%= form.label :demo_url, "Demo URL", class: "block text-sm font-medium text-gray-700" %>
                <%= form.url_field :demo_url, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

            <!-- Tags -->
            <div>
              <%= label_tag :project_tag_ids, "Tags", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-2 grid grid-cols-2 gap-2 sm:grid-cols-3 lg:grid-cols-4">
                <% @tags.each do |tag| %>
                  <div class="relative flex items-start">
                    <div class="flex items-center h-5">
                      <%= check_box_tag "project[tag_ids][]", tag.id, @project.tag_ids.include?(tag.id), 
                          id: "tag_#{tag.id}", 
                          class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
                    </div>
                    <div class="ml-3 text-sm">
                      <%= label_tag "tag_#{tag.id}", tag.name, class: "font-medium text-gray-700" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Current Images -->
            <% if @project.images.any? %>
              <div>
                <label class="block text-sm font-medium text-gray-700">Current Images</label>
                <div class="mt-2 grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
                  <% @project.images.each do |image| %>
                    <div class="relative">
                      <%= image_tag image, class: "h-24 w-full object-cover rounded-lg" %>
                      <%= link_to "Remove", admin_project_path(@project, image_id: image.id), 
                          method: :delete, 
                          confirm: "Remove this image?",
                          class: "absolute top-1 right-1 bg-red-600 text-white rounded-full p-1 text-xs hover:bg-red-700" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>

            <!-- New Images -->
            <div>
              <%= form.label :images, "Add New Images", class: "block text-sm font-medium text-gray-700" %>
              <%= form.file_field :images, multiple: true, accept: "image/*", 
                  class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="mt-2 text-sm text-gray-500">Select additional images for your project</p>
            </div>

            <!-- Published -->
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :published, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :published, "Published", class: "font-medium text-gray-700" %>
                <p class="text-gray-500">Make this project visible on the public site</p>
              </div>
            </div>

            <!-- Source (read-only for Flukebase projects) -->
            <div>
              <%= form.label :source, class: "block text-sm font-medium text-gray-700" %>
              <% if @project.source == 'flukebase' %>
                <p class="mt-1 text-sm text-gray-500 bg-gray-50 px-3 py-2 rounded-md">
                  This project was imported from Flukebase and some fields may be overwritten during sync.
                </p>
              <% else %>
                <p class="mt-1 text-sm text-gray-500">Manual project</p>
              <% end %>
            </div>
          </div>

          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-3">
            <%= link_to "Cancel", admin_project_path(@project), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Update Project", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
