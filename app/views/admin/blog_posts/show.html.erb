<div class="px-4 py-6 sm:px-0">
  <div class="lg:flex lg:items-center lg:justify-between">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @blog_post.title %>
      </h2>
      <div class="mt-1 flex flex-col sm:flex-row sm:flex-wrap sm:mt-0 sm:space-x-6">
        <div class="mt-2 flex items-center text-sm text-gray-500">
          <% if @blog_post.published? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Published</span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Draft</span>
          <% end %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500">
          Published: <%= @blog_post.published_at&.strftime("%B %d, %Y") || "Not set" %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-500">
          Created: <%= @blog_post.created_at.strftime("%B %d, %Y") %>
        </div>
      </div>
    </div>
    <div class="mt-5 flex lg:mt-0 lg:ml-4">
      <%= link_to "Edit", edit_admin_blog_post_path(@blog_post), class: "sm:ml-3 inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to "Delete", admin_blog_post_path(@blog_post), method: :delete, 
          data: { confirm: "Are you sure you want to delete this blog post? This action cannot be undone." },
          class: "ml-3 inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>
    </div>
  </div>

  <div class="mt-8">
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Blog Post Details</h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Title</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @blog_post.title %></dd>
          </div>
          <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Slug</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @blog_post.slug %></dd>
          </div>
          <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500">Content</dt>
            <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
              <div class="prose max-w-none">
                <%= @blog_post.content %>
              </div>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  </div>

  <div class="mt-6 flex justify-between">
    <%= link_to "← Back to Blog Posts", admin_blog_posts_path, class: "text-indigo-600 hover:text-indigo-500" %>
    <% if @blog_post.published? %>
      <%= link_to "View on Site →", blog_post_path(@blog_post), target: "_blank", class: "text-indigo-600 hover:text-indigo-500" %>
    <% end %>
  </div>
</div>
