<div class="px-4 py-6 sm:px-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">New Blog Post</h3>
        <p class="mt-1 text-sm text-gray-600">
          Create a new blog post with rich text content.
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with model: [:admin, @blog_post], local: true, class: "space-y-6" do |form| %>
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            
            <!-- Title -->
            <div>
              <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <% if @blog_post.errors[:title].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @blog_post.errors[:title].first %></p>
              <% end %>
            </div>

            <!-- Slug -->
            <div>
              <%= form.label :slug, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :slug, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="mt-2 text-sm text-gray-500">Leave blank to auto-generate from title</p>
              <% if @blog_post.errors[:slug].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @blog_post.errors[:slug].first %></p>
              <% end %>
            </div>

            <!-- Content -->
            <div>
              <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
              <%= form.rich_text_area :content, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <% if @blog_post.errors[:content].any? %>
                <p class="mt-2 text-sm text-red-600"><%= @blog_post.errors[:content].first %></p>
              <% end %>
            </div>

            <!-- Published Date -->
            <div>
              <%= form.label :published_at, "Published Date", class: "block text-sm font-medium text-gray-700" %>
              <%= form.datetime_local_field :published_at, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              <p class="mt-2 text-sm text-gray-500">Leave blank to use current date when published</p>
            </div>

            <!-- Published -->
            <div class="flex items-start">
              <div class="flex items-center h-5">
                <%= form.check_box :published, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded" %>
              </div>
              <div class="ml-3 text-sm">
                <%= form.label :published, "Published", class: "font-medium text-gray-700" %>
                <p class="text-gray-500">Make this blog post visible on the public site</p>
              </div>
            </div>
          </div>

          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6 space-x-3">
            <%= link_to "Cancel", admin_blog_posts_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
            <%= form.submit "Create Blog Post", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
