<!-- Comprehensive Professional CV Page -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50" data-controller="cv-page">
  <!-- Professional Header with Personal Info -->
  <div class="relative overflow-hidden bg-white border-b border-gray-200 shadow-sm">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-600/5 to-indigo-600/5"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 items-start">
        <!-- Personal Information -->
        <div class="lg:col-span-2">
          <div class="editable-content" data-controller="shared-editing" 
               data-shared-editing-content-type-value="PersonalInfo" 
               data-shared-editing-content-id-value="<%= @personal_info.id %>" 
               data-shared-editing-field-value="name">
            <div class="editable-display">
              <h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-gray-900 mb-2">
                <%= @personal_info.name.presence || "Your Name" %>
              </h1>
            </div>
            <% if user_signed_in? %>
              <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Edit
                </button>
              </div>
            <% end %>
          </div>

          <div class="editable-content mt-2" data-controller="shared-editing" 
               data-shared-editing-content-type-value="PersonalInfo" 
               data-shared-editing-content-id-value="<%= @personal_info.id %>" 
               data-shared-editing-field-value="title">
            <div class="editable-display">
              <p class="text-xl text-blue-600 font-semibold">
                <%= @personal_info.title.presence || "Professional Title" %>
              </p>
            </div>
            <% if user_signed_in? %>
              <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                  <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                  </svg>
                  Edit
                </button>
              </div>
            <% end %>
          </div>

          <!-- Contact Information -->
          <div class="mt-6 flex flex-wrap items-center gap-4 text-gray-600">
            <% if @personal_info.email.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
                <a href="mailto:<%= @personal_info.email %>" class="hover:text-blue-600"><%= @personal_info.email %></a>
              </div>
            <% end %>
            <% if @personal_info.phone.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <a href="tel:<%= @personal_info.phone %>" class="hover:text-blue-600"><%= @personal_info.phone %></a>
              </div>
            <% end %>
            <% if @personal_info.location.present? %>
              <div class="flex items-center">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <span><%= @personal_info.location %></span>
              </div>
            <% end %>
          </div>

          <!-- Social Links -->
          <% if @personal_info.social_links.any? %>
            <div class="mt-4 flex flex-wrap gap-3">
              <% @personal_info.social_links.each do |link| %>
                <a href="<%= link[:url] %>" target="_blank" class="inline-flex items-center px-3 py-1.5 bg-gray-100 text-gray-700 text-sm font-medium rounded-full hover:bg-gray-200 transition-colors duration-200">
                  <%= link[:name] %>
                  <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                  </svg>
                </a>
              <% end %>
            </div>
          <% end %>

          <!-- Professional Summary -->
          <% if @personal_info.summary.present? %>
            <div class="mt-8">
              <div class="editable-content" data-controller="shared-editing" 
                   data-shared-editing-content-type-value="PersonalInfo" 
                   data-shared-editing-content-id-value="<%= @personal_info.id %>" 
                   data-shared-editing-field-value="summary">
                <div class="editable-display">
                  <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
                    <%= @personal_info.summary %>
                  </div>
                </div>
                <% if user_signed_in? %>
                  <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200 mt-2">
                    <button class="edit-btn inline-flex items-center px-3 py-1.5 bg-green-100 text-green-700 text-sm font-medium rounded-full hover:bg-green-200 transition-colors duration-200">
                      <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                      </svg>
                      Edit Summary
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Action Buttons -->
        <div class="lg:col-span-1 flex flex-col space-y-4">
          <%= link_to resume_path, class: "group inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200" do %>
            <svg class="w-5 h-5 mr-2 group-hover:animate-bounce" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            Download PDF Resume
          <% end %>
          
          <% if user_signed_in? %>
            <%= link_to admin_cv_path, class: "inline-flex items-center justify-center px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:border-gray-400 hover:bg-gray-50 transition-all duration-200" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              Manage CV
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content with Professional Sections -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Main Content Column -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Work Experience Section -->
        <section class="bg-white rounded-2xl shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 00-2 2H8a2 2 0 00-2-2V6m8 0h2a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2h2"/>
              </svg>
              Work Experience
            </h2>
            <% if user_signed_in? %>
              <button data-action="click->cv-page#toggleExperienceForm" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add Experience
              </button>
            <% end %>
          </div>

          <!-- Add Experience Form -->
          <div id="add-experience-form" class="hidden bg-gray-50 border border-gray-200 rounded-lg p-6 mb-6" data-cv-page-target="addForm">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Add New Experience</h3>
            <%= form_with model: @cv_entry, url: cv_entries_path, class: "space-y-4" do |f| %>
              <%= f.hidden_field :entry_type, value: "experience" %>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <%= f.label :title, "Position", class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Senior Developer" %>
                </div>
                
                <div>
                  <%= f.label :company, class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.text_field :company, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Company Name" %>
                </div>
              </div>
              
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div>
                  <%= f.label :start_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.date_field :start_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
                
                <div>
                  <%= f.label :end_date, class: "block text-sm font-medium text-gray-700 mb-1" %>
                  <%= f.date_field :end_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
                </div>
                
                <div class="flex items-center">
                  <div class="flex items-center h-full pt-6">
                    <%= f.check_box :current, class: "h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" %>
                    <%= f.label :current, "Current Position", class: "ml-2 text-sm text-gray-700" %>
                  </div>
                </div>
              </div>
              
              <div>
                <%= f.label :content, "Description", class: "block text-sm font-medium text-gray-700 mb-1" %>
                <%= f.rich_text_area :content, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "Describe your responsibilities and achievements..." %>
              </div>
              
              <div class="flex justify-end space-x-3">
                <button type="button" data-action="cv-page#toggleAddForm" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 transition-colors duration-200">
                  Cancel
                </button>
                <%= f.submit "Save Experience", class: "px-4 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors duration-200" %>
              </div>
            <% end %>
          </div>
          
          <!-- Experience Entries -->
          <% if @experiences.any? %>
            <div class="space-y-6" data-cv-page-target="experienceContainer">
              <% @experiences.each_with_index do |entry, index| %>
                <div class="relative border-l-4 border-blue-200 pl-6 pb-6 last:pb-0 experience-item transition-all duration-200 hover:bg-gray-50 rounded-lg cursor-move" 
                     data-cv-page-target="experienceItem" 
                     data-id="<%= entry.id %>" 
                     data-position="<%= index %>"
                     draggable="true">
                  <div class="absolute -left-2 top-0 w-4 h-4 bg-blue-600 rounded-full border-2 border-white"></div>
                  
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <!-- Editable Title -->
                      <div class="editable-content" data-controller="shared-editing" 
                           data-shared-editing-content-type-value="CvEntry" 
                           data-shared-editing-content-id-value="<%= entry.id %>" 
                           data-shared-editing-field-value="title">
                        <div class="editable-display">
                          <h3 class="text-lg font-semibold text-gray-900"><%= entry.title %></h3>
                        </div>
                        <% if user_signed_in? %>
                          <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                            <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                              </svg>
                              Edit
                            </button>
                          </div>
                        <% end %>
                      </div>

                      <!-- Editable Company -->
                      <div class="editable-content" data-controller="shared-editing" 
                           data-shared-editing-content-type-value="CvEntry" 
                           data-shared-editing-content-id-value="<%= entry.id %>" 
                           data-shared-editing-field-value="company">
                        <div class="editable-display">
                          <p class="text-blue-600 font-medium"><%= entry.company.presence || "Company Name" %></p>
                        </div>
                        <% if user_signed_in? %>
                          <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                            <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                              </svg>
                              Edit Company
                            </button>
                          </div>
                        <% end %>
                      </div>
                      
                      <!-- Date Range (combines start_date, end_date, and current flag) -->
                      <div class="date-range-container mt-1">
                        <!-- Start Date -->
                        <div class="editable-content inline-block" data-controller="shared-editing" 
                             data-shared-editing-content-type-value="CvEntry" 
                             data-shared-editing-content-id-value="<%= entry.id %>" 
                             data-shared-editing-field-value="start_date">
                          <div class="editable-display">
                            <span class="text-sm text-gray-500"><%= entry.start_date&.strftime("%b %Y") || "Start Date" %></span>
                          </div>
                          <% if user_signed_in? %>
                            <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                              <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit
                              </button>
                            </div>
                          <% end %>
                        </div>
                        
                        <span class="text-sm text-gray-500 mx-1">-</span>
                        
                        <!-- End Date / Current -->
                        <div class="editable-content inline-block" data-controller="shared-editing" 
                             data-shared-editing-content-type-value="CvEntry" 
                             data-shared-editing-content-id-value="<%= entry.id %>" 
                             data-shared-editing-field-value="<%= entry.current? ? 'current' : 'end_date' %>">
                          <div class="editable-display">
                            <span class="text-sm text-gray-500"><%= entry.current? ? "Present" : (entry.end_date&.strftime("%b %Y") || "End Date") %></span>
                          </div>
                          <% if user_signed_in? %>
                            <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200">
                              <button class="edit-btn inline-flex items-center px-2 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full hover:bg-blue-200 transition-colors duration-200">
                                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                                </svg>
                                Edit
                              </button>
                            </div>
                          <% end %>
                        </div>
                      </div>

                      <!-- Editable Content -->
                      <div class="editable-content mt-3" data-controller="shared-editing" 
                           data-shared-editing-content-type-value="CvEntry" 
                           data-shared-editing-content-id-value="<%= entry.id %>" 
                           data-shared-editing-field-value="content">
                        <div class="editable-display">
                          <div class="prose max-w-none text-gray-700">
                            <%= entry.content %>
                          </div>
                        </div>
                        <% if user_signed_in? %>
                          <div class="editable-controls opacity-0 hover:opacity-100 transition-opacity duration-200 mt-2">
                            <button class="edit-btn inline-flex items-center px-2 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full hover:bg-green-200 transition-colors duration-200">
                              <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                              </svg>
                              Edit
                            </button>
                          </div>
                        <% end %>
                      </div>
                    </div>

                    <% if user_signed_in? %>
                      <div class="ml-4 opacity-0 hover:opacity-100 transition-opacity duration-200">
                        <%= button_to cv_entry_path(entry), method: :delete, 
                            data: { confirm: "Are you sure?" }, 
                            class: "text-red-600 hover:text-red-800 transition-colors duration-200" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 00-2 2H8a2 2 0 00-2-2V6m8 0h2a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V8a2 2 0 012-2h2"/>
              </svg>
              <p>No work experience added yet.</p>
            </div>
          <% end %>
        </section>

        <!-- Education Section -->
        <section class="bg-white rounded-2xl shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
              <svg class="w-6 h-6 mr-3 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
              </svg>
              Education
            </h2>
            <% if user_signed_in? %>
              <button data-action="click->cv-page#toggleEducationForm" class="inline-flex items-center px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors duration-200">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add Education
              </button>
            <% end %>
          </div>

          <% if @educations.any? %>
            <div class="space-y-6">
              <% @educations.each do |education| %>
                <div class="border-l-4 border-green-200 pl-6">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h3 class="text-lg font-semibold text-gray-900"><%= education.full_degree %></h3>
                      <p class="text-green-600 font-medium"><%= education.institution %></p>
                      <p class="text-sm text-gray-500 mt-1"><%= education.date_range %></p>
                      <% if education.display_gpa.present? %>
                        <p class="text-sm text-gray-600 mt-1"><%= education.display_gpa %></p>
                      <% end %>
                      <% if education.achievements.present? %>
                        <div class="prose max-w-none text-gray-700 mt-2">
                          <%= education.achievements %>
                        </div>
                      <% end %>
                    </div>
                    <% if user_signed_in? %>
                      <div class="ml-4 opacity-0 hover:opacity-100 transition-opacity duration-200">
                        <%= button_to education_path(education), method: :delete, 
                            data: { confirm: "Are you sure?" }, 
                            class: "text-red-600 hover:text-red-800 transition-colors duration-200" do %>
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                          </svg>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-300 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 14l9-5-9-5-9 5 9 5z"/>
              </svg>
              <p>No education records added yet.</p>
            </div>
          <% end %>
        </section>
      </div>

      <!-- Sidebar -->
      <div class="space-y-8">
        <!-- Skills Section -->
        <section class="bg-white rounded-2xl shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              Skills
            </h2>
            <% if user_signed_in? %>
              <button data-action="click->cv-page#toggleSkillsForm" class="inline-flex items-center px-3 py-1.5 bg-purple-600 text-white text-sm font-medium rounded-lg hover:bg-purple-700 transition-colors duration-200">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add
              </button>
            <% end %>
          </div>

          <% if @skills.any? %>
            <% Skill::CATEGORIES.each do |category| %>
              <% category_skills = @skills.by_category(category) %>
              <% if category_skills.any? %>
                <div class="mb-6 last:mb-0">
                  <h4 class="text-sm font-semibold text-gray-700 mb-3"><%= category %></h4>
                  <div class="space-y-3">
                    <% category_skills.each do |skill| %>
                      <div class="flex items-center justify-between">
                        <span class="text-sm text-gray-800"><%= skill.name %></span>
                        <div class="flex items-center space-x-2">
                          <div class="w-20 bg-gray-200 rounded-full h-2">
                            <div class="bg-purple-600 h-2 rounded-full transition-all duration-300" style="width: <%= skill.proficiency_percentage %>%"></div>
                          </div>
                          <span class="text-xs text-gray-500"><%= skill.proficiency_name %></span>
                          <% if user_signed_in? %>
                            <%= button_to skill_path(skill), method: :delete, 
                                data: { confirm: "Are you sure?" }, 
                                class: "ml-2 text-red-500 hover:text-red-700 opacity-0 hover:opacity-100 transition-opacity duration-200" do %>
                              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                              </svg>
                            <% end %>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% else %>
            <div class="text-center py-6 text-gray-500">
              <svg class="mx-auto h-8 w-8 text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
              <p class="text-sm">No skills added yet.</p>
            </div>
          <% end %>
        </section>

        <!-- Certifications Section -->
        <section class="bg-white rounded-2xl shadow-lg p-8">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
              Certifications
            </h2>
            <% if user_signed_in? %>
              <button data-action="click->cv-page#toggleCertificationsForm" class="inline-flex items-center px-3 py-1.5 bg-yellow-600 text-white text-sm font-medium rounded-lg hover:bg-yellow-700 transition-colors duration-200">
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                Add
              </button>
            <% end %>
          </div>

          <% if @certifications.any? %>
            <div class="space-y-4">
              <% @certifications.each do |cert| %>
                <div class="border border-gray-200 rounded-lg p-4 <% if cert.expired? %>bg-red-50 border-red-200<% end %>">
                  <div class="flex items-start justify-between">
                    <div class="flex-1">
                      <h4 class="font-semibold text-gray-900 text-sm"><%= cert.name %></h4>
                      <p class="text-sm text-gray-600"><%= cert.issuer %></p>
                      <p class="text-xs text-gray-500 mt-1"><%= cert.date_range %></p>
                      <p class="text-xs <%= cert.expired? ? 'text-red-600' : 'text-green-600' %> mt-1">
                        <%= cert.expiry_status %>
                      </p>
                      <% if cert.credential_url.present? %>
                        <a href="<%= cert.credential_url %>" target="_blank" class="inline-flex items-center text-xs text-blue-600 hover:text-blue-800 mt-1">
                          View Credential
                          <svg class="w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                          </svg>
                        </a>
                      <% end %>
                    </div>
                    <% if user_signed_in? %>
                      <%= button_to certification_path(cert), method: :delete, 
                          data: { confirm: "Are you sure?" }, 
                          class: "ml-2 text-red-500 hover:text-red-700 opacity-0 hover:opacity-100 transition-opacity duration-200" do %>
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                        </svg>
                      <% end %>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-6 text-gray-500">
              <svg class="mx-auto h-8 w-8 text-gray-300 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
              <p class="text-sm">No certifications added yet.</p>
            </div>
          <% end %>
        </section>
      </div>
    </div>
  </div>
</div>
