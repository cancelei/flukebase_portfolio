<div class="bg-white">
  <div class="mx-auto max-w-4xl px-6 lg:px-8 py-24 sm:py-32">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">Curriculum Vitae</h1>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        My professional background and experience
      </p>
    </div>

    <% if user_signed_in? %>
      <div class="mt-8 mb-8">
        <%= form_with model: CvEntry.new, local: true, class: "bg-white shadow rounded-lg p-6 mb-8" do |form| %>
          <h3 class="text-lg font-medium text-gray-900 mb-4">Add New CV Entry</h3>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
              <%= form.text_field :title, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>
            
            <div>
              <%= form.label :position, "Display Order", class: "block text-sm font-medium text-gray-700" %>
              <%= form.number_field :position, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md", value: (CvEntry.maximum(:position) || 0) + 1 %>
            </div>
            
            <div>
              <%= form.label :content, class: "block text-sm font-medium text-gray-700" %>
              <%= form.rich_text_area :content, class: "trix-content focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>
          
          <div class="mt-6">
            <%= form.submit "Add CV Entry", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        <% end %>
      </div>
    <% end %>

    <% if @cv_entries.any? %>
      <div class="mt-16 space-y-16">
        <% @cv_entries.each do |entry| %>
          <div class="bg-white overflow-hidden shadow rounded-lg mb-6" data-controller="shared-editing">
            <div class="px-4 py-5 sm:p-6">
              <div class="flex justify-between items-start">
                <div class="editable-content" data-controller="shared-editing" 
                     data-shared-editing-content-type-value="CvEntry" 
                     data-shared-editing-content-id-value="<%= entry.id %>" 
                     data-shared-editing-field-value="title">
                  <div class="editable-display">
                    <h3 class="text-lg leading-6 font-medium text-gray-900 mb-3"><%= entry.title %></h3>
                  </div>
                  <% if user_signed_in? %>
                    <div class="editable-controls hidden">
                      <button class="edit-btn text-indigo-600 hover:text-indigo-900 text-sm">Edit</button>
                    </div>
                  <% end %>
                </div>
                
                <% if user_signed_in? %>
                  <div class="flex space-x-2">
                    <%= button_to "Delete", cv_entry_path(entry), method: :delete, 
                        data: { confirm: "Are you sure you want to delete this CV entry?" }, 
                        class: "text-red-600 hover:text-red-900 text-sm" %>
                  </div>
                <% end %>
              </div>
              
              <div class="editable-content" data-controller="shared-editing" 
                   data-shared-editing-content-type-value="CvEntry" 
                   data-shared-editing-content-id-value="<%= entry.id %>" 
                   data-shared-editing-field-value="content">
                <div class="editable-display">
                  <div class="text-gray-700 prose max-w-none"><%= entry.content %></div>
                </div>
                <% if user_signed_in? %>
                  <div class="editable-controls hidden">
                    <button class="edit-btn text-indigo-600 hover:text-indigo-900 text-sm">Edit</button>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center mt-16">
        <p class="text-gray-500">CV information will be available soon.</p>
      </div>
    <% end %>

    <div class="mt-16 text-center">
      <%= link_to resume_path, class: "inline-flex items-center rounded-md bg-indigo-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
        <svg class="-ml-0.5 mr-1.5 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        Download Resume (PDF)
      <% end %>
    </div>
  </div>
</div>
