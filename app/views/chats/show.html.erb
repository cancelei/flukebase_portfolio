<!-- AI Chat Interface for Recruiters -->
<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200 shadow-sm">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 flex items-center">
            <svg class="w-8 h-8 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Chat with <%= @personal_info.name.presence || "the Candidate" %>
          </h1>
          <p class="mt-2 text-gray-600">Ask questions about experience, skills, projects, and qualifications</p>
        </div>
        
        <div class="flex items-center space-x-4">
          <%= link_to cv_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 font-medium rounded-lg hover:bg-gray-50 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            View Full CV
          <% end %>
          
          <%= link_to resume_path, class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd"/>
            </svg>
            Download Resume
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Chat Interface -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
      <!-- Suggestion Cards -->
      <% if @chat_messages.empty? %>
        <div class="p-6 border-b border-gray-200 bg-gradient-to-r from-blue-50 to-indigo-50">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">ðŸ’¬ Start a conversation</h3>
          <p class="text-gray-600 mb-6">Here are some questions you might want to ask:</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <button class="suggestion-btn text-left p-4 bg-white rounded-lg border-2 border-transparent hover:border-blue-200 hover:shadow-md transition-all duration-200" data-question="What is your experience with Ruby on Rails and how many years have you been working with it?">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                </svg>
                <span class="font-medium text-gray-900">Technical Experience</span>
              </div>
              <p class="text-sm text-gray-600 mt-2">Ask about programming languages, frameworks, and years of experience</p>
            </button>
            
            <button class="suggestion-btn text-left p-4 bg-white rounded-lg border-2 border-transparent hover:border-blue-200 hover:shadow-md transition-all duration-200" data-question="Can you tell me about the most challenging project you've worked on and what technologies were involved?">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-green-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                </svg>
                <span class="font-medium text-gray-900">Project Experience</span>
              </div>
              <p class="text-sm text-gray-600 mt-2">Learn about specific projects and technical challenges</p>
            </button>
            
            <button class="suggestion-btn text-left p-4 bg-white rounded-lg border-2 border-transparent hover:border-blue-200 hover:shadow-md transition-all duration-200" data-question="What is your educational background and do you have any relevant certifications?">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"/>
                </svg>
                <span class="font-medium text-gray-900">Education & Certifications</span>
              </div>
              <p class="text-sm text-gray-600 mt-2">Inquire about formal education and professional certifications</p>
            </button>
            
            <button class="suggestion-btn text-left p-4 bg-white rounded-lg border-2 border-transparent hover:border-blue-200 hover:shadow-md transition-all duration-200" data-question="Are you available for full-time, part-time, or freelance work? What type of projects interest you most?">
              <div class="flex items-center">
                <svg class="w-5 h-5 text-orange-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="font-medium text-gray-900">Availability & Preferences</span>
              </div>
              <p class="text-sm text-gray-600 mt-2">Ask about work arrangement preferences and project interests</p>
            </button>
          </div>
        </div>
      <% end %>

      <!-- Chat Messages -->
      <div class="chat-container h-96 overflow-y-auto p-6" id="chat_messages">
        <% @chat_messages.each do |message| %>
          <%= render partial: "chat_message", locals: { message: message } %>
        <% end %>
      </div>

      <!-- Chat Input Form -->
      <div class="border-t border-gray-200 p-6 bg-gray-50" id="chat_form">
        <%= render partial: "form", locals: { chat_message: @chat_message } %>
      </div>
    </div>

    <!-- Help Section -->
    <div class="mt-8 bg-white rounded-lg shadow-sm p-6">
      <div class="flex items-start">
        <svg class="w-6 h-6 text-blue-600 mr-3 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">ðŸ’¡ How to get the best responses</h3>
          <ul class="text-gray-600 space-y-2">
            <li>â€¢ Ask specific questions about technical skills, experience, or qualifications</li>
            <li>â€¢ Inquire about particular technologies, frameworks, or programming languages</li>
            <li>â€¢ Ask about project complexity, team size, or industry experience</li>
            <li>â€¢ Question availability for different types of work arrangements</li>
            <li>â€¢ Request examples of specific accomplishments or achievements</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Handle suggestion button clicks
  document.addEventListener('DOMContentLoaded', function() {
    const suggestionBtns = document.querySelectorAll('.suggestion-btn');
    const chatInput = document.querySelector('#chat_message_question');
    
    suggestionBtns.forEach(btn => {
      btn.addEventListener('click', function() {
        const question = this.dataset.question;
        if (chatInput) {
          chatInput.value = question;
          chatInput.focus();
        }
      });
    });

    // Auto-scroll chat to bottom
    const chatContainer = document.getElementById('chat_messages');
    if (chatContainer) {
      chatContainer.scrollTop = chatContainer.scrollHeight;
    }
  });
</script> 